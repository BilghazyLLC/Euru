<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <!--<include layout="@layout/loading" />-->
    <io.codelabs.widget.ForegroundImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/about_header_height"
            android:scaleType="fitCenter"
            android:src="@drawable/file_not_found"/>


    <io.codelabs.widget.BaselineGridTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/spacing_normal"
            android:text="Ooops!!"
            android:textColor="@color/text_secondary_dark"
            android:textSize="22sp"
            app:fontFamily="@font/lato"/>

    <io.codelabs.widget.BaselineGridTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="You have no jobs here"
            android:textColor="@color/text_tertiary_dark"
            android:textSize="14sp"
            app:fontFamily="@font/lato"/>

</LinearLayout>